NODE_ENV=development
PORT=3000

POSTGRES_DB=staff
POSTGRES_USER=pasgress
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432
POSTGRES_HOST=localhost
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

REDIS_URL=redis://localhost:6379

JWT_SECRET=your-super-secret-jwt-key-here-32-chars
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here-32-chars

# File storage configuration
STORAGE_DRIVER=local
STORAGE_BASE_PATH=./storage
# STORAGE_BUCKET=
STORAGE_RETENTION_DAYS=30

# Agent gateway configuration
GATEWAY_ID=gateway-dev-01
SERVER_URL=http://localhost:3001
CONTROL_URL=ws://localhost:3001/ws
API_KEY=local-development-key
LOCAL_BUFFER_PATH=./tmp/agent-gateway-buffer
FLUSH_INTERVAL_MS=5000
BATCH_SIZE=50
HEARTBEAT_INTERVAL_MS=15000
CONTROL_RECONNECT_BACKOFF_MS=5000

# Agent API configuration
GATEWAY_API_KEYS=local-development-key
